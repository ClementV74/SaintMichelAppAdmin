<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaintMichel.View.OffreDetailPage"
             Title="Détails de l'offre"
             BackgroundColor="#f8f9fa">

    <ScrollView>
        <Grid Padding="20" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <VerticalStackLayout Grid.Row="0" Spacing="4" Margin="0,10,0,24">
                <Label Text="Détails de l'offre" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       TextColor="#1a1a2e" 
                       HorizontalOptions="Start" />
                <Label Text="Modifiez les informations de l'offre d'emploi"
                       FontSize="16"
                       TextColor="#6b7280"
                       HorizontalOptions="Start" />
            </VerticalStackLayout>

            <!-- Form Fields -->
            <Frame Grid.Row="1" 
                   BackgroundColor="White" 
                   CornerRadius="16" 
                   HasShadow="True"
                   BorderColor="Transparent"
                   Padding="20">
                <VerticalStackLayout Spacing="16">
                    <!-- ID Interim (Read-only styled) -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="ID Interim" 
                               FontSize="14" 
                               TextColor="#6b7280" 
                               FontAttributes="Bold"/>
                        <Frame Padding="12,10" 
                               CornerRadius="8" 
                               BackgroundColor="#f3f4f6" 
                               BorderColor="Transparent"
                               HasShadow="False">
                            <Label Text="{Binding IDInterim}" 
                                   FontSize="16" 
                                   TextColor="#374151"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Enterprise Name -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Nom de l'entreprise" 
                               FontSize="14" 
                               TextColor="#6b7280" 
                               FontAttributes="Bold"/>
                        <Frame Padding="0" 
                               CornerRadius="8" 
                               BorderColor="#e5e7eb"
                               HasShadow="False">
                            <Grid ColumnDefinitions="Auto,*">
                                <Label Text="🏢" 
                                       FontSize="18" 
                                       VerticalOptions="Center"
                                       Margin="12,0"/>
                                <Entry Grid.Column="1"
                                       Text="{Binding NameEntreprise}" 
                                       Placeholder="Entrez le nom de l'entreprise" 
                                       FontSize="16" 
                                       TextColor="#374151"
                                       Margin="0,0,12,0" 
                                       HeightRequest="50"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Dates Section -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                        <!-- Start Date -->
                        <VerticalStackLayout Grid.Column="0" Spacing="6">
                            <Label Text="Date de début" 
                                   FontSize="14" 
                                   TextColor="#6b7280" 
                                   FontAttributes="Bold"/>
                            <Frame Padding="0" 
                                   CornerRadius="8" 
                                   BorderColor="#e5e7eb"
                                   HasShadow="False">
                                <DatePicker Date="{Binding DateStart}" 
                                            Format="dd/MM/yyyy"
                                            FontSize="16" 
                                            TextColor="#374151"
                                            Margin="12,0" 
                                            HeightRequest="50"/>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- End Date -->
                        <VerticalStackLayout Grid.Column="1" Spacing="6">
                            <Label Text="Date de fin" 
                                   FontSize="14" 
                                   TextColor="#6b7280" 
                                   FontAttributes="Bold"/>
                            <Frame Padding="0" 
                                   CornerRadius="8" 
                                   BorderColor="#e5e7eb"
                                   HasShadow="False">
                                <DatePicker Date="{Binding DateEnd}" 
                                            Format="dd/MM/yyyy"
                                            FontSize="16" 
                                            TextColor="#374151"
                                            Margin="12,0" 
                                            HeightRequest="50"/>
                            </Frame>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- City Name -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Ville" 
                               FontSize="14" 
                               TextColor="#6b7280" 
                               FontAttributes="Bold"/>
                        <Frame Padding="0" 
                               CornerRadius="8" 
                               BorderColor="#e5e7eb"
                               HasShadow="False">
                            <Grid ColumnDefinitions="Auto,*">
                                <Label Text="📍" 
                                       FontSize="18" 
                                       VerticalOptions="Center"
                                       Margin="12,0"/>
                                <Entry Grid.Column="1"
                                       Text="{Binding NameVille}" 
                                       Placeholder="Entrez le nom de la ville" 
                                       FontSize="16" 
                                       TextColor="#374151"
                                       Margin="0,0,12,0" 
                                       HeightRequest="50"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Job Type and Sector in a row -->
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                        <!-- Offer Type -->
                        <VerticalStackLayout Grid.Column="0" Spacing="6">
                            <Label Text="Type d'offre" 
                                   FontSize="14" 
                                   TextColor="#6b7280" 
                                   FontAttributes="Bold"/>
                            <Frame Padding="0" 
                                   CornerRadius="8" 
                                   BorderColor="#e5e7eb"
                                   HasShadow="False">
                                <Picker SelectedItem="{Binding type_offre}" 
                                        Title="Sélectionnez le type" 
                                        FontSize="16" 
                                        TextColor="#374151"
                                        Margin="12,0" 
                                        HeightRequest="50">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>CDI</x:String>
                                            <x:String>CDD</x:String>
                                            <x:String>Intérim</x:String>
                                            <x:String>Stage</x:String>
                                            <x:String>Alternance</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Frame>
                        </VerticalStackLayout>

                        <!-- Sector Activity -->
                        <VerticalStackLayout Grid.Column="1" Spacing="6">
                            <Label Text="Secteur d'activité" 
                                   FontSize="14" 
                                   TextColor="#6b7280" 
                                   FontAttributes="Bold"/>
                            <Frame Padding="0" 
                                   CornerRadius="8" 
                                   BorderColor="#e5e7eb"
                                   HasShadow="False">
                                <Picker SelectedItem="{Binding SecteurActivite}" 
                                        Title="Sélectionnez le secteur" 
                                        FontSize="16" 
                                        TextColor="#374151"
                                        Margin="12,0" 
                                        HeightRequest="50">
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>Informatique</x:String>
                                            <x:String>Santé</x:String>
                                            <x:String>Finance</x:String>
                                            <x:String>Éducation</x:String>
                                            <x:String>Commerce</x:String>
                                            <x:String>Industrie</x:String>
                                            <x:String>Autre</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Frame>
                        </VerticalStackLayout>
                    </Grid>

                    <!-- Task -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Description des tâches" 
                               FontSize="14" 
                               TextColor="#6b7280" 
                               FontAttributes="Bold"/>
                        <Frame Padding="0" 
                               CornerRadius="8" 
                               BorderColor="#e5e7eb"
                               HasShadow="False">
                            <Editor Text="{Binding Tache}" 
                                    Placeholder="Décrivez les tâches et responsabilités du poste" 
                                    FontSize="16" 
                                    TextColor="#374151"
                                    AutoSize="TextChanges" 
                                    Margin="12,8" 
                                    HeightRequest="120"/>
                        </Frame>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Buttons -->
            <Grid Grid.Row="2" 
                  ColumnDefinitions="*,*" 
                  ColumnSpacing="16"
                  Margin="0,24,0,10">

                <Button Grid.Column="0"
                        Text="Enregistrer" 
                        Command="{Binding ConfirmCommand}" 
                        BackgroundColor="#0ea5e9" 
                        TextColor="White" 
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50">
                    <Button.Shadow>
                        <Shadow Brush="#400ea5e9"
                                Offset="0,4"
                                Radius="8" />
                    </Button.Shadow>
                </Button>

                <Button Grid.Column="1"
                        Text="Supprimer" 
                        Command="{Binding DeleteCommand}" 
                        BackgroundColor="White" 
                        TextColor="#ef4444" 
                        BorderColor="#ef4444"
                        BorderWidth="1"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"/>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>