<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaintMichel.View.EventDetailPage"
             Title="Détails de l'événement"
             BackgroundColor="#f8f9fa">

    <ScrollView>
        <Grid Padding="20" RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <VerticalStackLayout Grid.Row="0" Spacing="4" Margin="0,10,0,24">
                <Label Text="Détails de l'événement" 
                       FontSize="28" 
                       FontAttributes="Bold" 
                       TextColor="#1a1a2e" 
                       HorizontalOptions="Start" />
                <Label Text="Modifiez les informations ci-dessous"
                       FontSize="16"
                       TextColor="#6b7280"
                       HorizontalOptions="Start" />
            </VerticalStackLayout>

            <!-- Form Fields -->
            <Frame Grid.Row="1" 
                   BackgroundColor="White" 
                   CornerRadius="16" 
                   HasShadow="True"
                   BorderColor="Transparent"
                   Padding="20">
                <VerticalStackLayout Spacing="16">
                    <!-- ID Event (Read-only styled) -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="ID Événement" 
                               FontSize="14" 
                               TextColor="#6b7280" 
                               FontAttributes="Bold"/>
                        <Frame Padding="12,10" 
                               CornerRadius="8" 
                               BackgroundColor="#f3f4f6" 
                               BorderColor="Transparent"
                               HasShadow="False">
                            <Label Text="{Binding IDEvent}" 
                                   FontSize="16" 
                                   TextColor="#374151"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Name -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Nom" 
                               FontSize="14" 
                               TextColor="#6b7280" 
                               FontAttributes="Bold"/>
                        <Frame Padding="0" 
                               CornerRadius="8" 
                               BorderColor="#e5e7eb"
                               HasShadow="False">
                            <Entry Text="{Binding Name}" 
                                   Placeholder="Entrez le nom de l'événement" 
                                   FontSize="16" 
                                   TextColor="#374151"
                                   Margin="12,0" 
                                   HeightRequest="50"
                                   VerticalOptions="Center"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Date with DatePicker -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Date" 
                               FontSize="14" 
                               TextColor="#6b7280" 
                               FontAttributes="Bold"/>
                        <Frame Padding="0" 
                               CornerRadius="8" 
                               BorderColor="#e5e7eb"
                               HasShadow="False">
                            <Grid ColumnDefinitions="Auto,*">
                                <Label Text="🗓️" 
                                       FontSize="18" 
                                       VerticalOptions="Center"
                                       Margin="12,0"/>
                                <DatePicker Grid.Column="1"
                                            Date="{Binding Date}" 
                                            FontSize="16" 
                                            TextColor="#374151"
                                            Format="dd MMMM yyyy"
                                            Margin="0,0,12,0" 
                                            HeightRequest="50"/>
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Description -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Description" 
                               FontSize="14" 
                               TextColor="#6b7280" 
                               FontAttributes="Bold"/>
                        <Frame Padding="0" 
                               CornerRadius="8" 
                               BorderColor="#e5e7eb"
                               HasShadow="False">
                            <Editor Text="{Binding Description}" 
                                    Placeholder="Entrez la description de l'événement" 
                                    FontSize="16" 
                                    TextColor="#374151"
                                    AutoSize="TextChanges" 
                                    Margin="12,8" 
                                    HeightRequest="120"/>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- Location -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="Lieu" 
                               FontSize="14" 
                               TextColor="#6b7280" 
                               FontAttributes="Bold"/>
                        <Frame Padding="0" 
                               CornerRadius="8" 
                               BorderColor="#e5e7eb"
                               HasShadow="False">
                            <Grid ColumnDefinitions="Auto,*">
                                <Label Text="📍" 
                                       FontSize="18" 
                                       VerticalOptions="Center"
                                       Margin="12,0"/>
                                <Entry Grid.Column="1"
                                       Text="{Binding Lieu}" 
                                       Placeholder="Entrez le lieu de l'événement" 
                                       FontSize="16" 
                                       TextColor="#374151"
                                       Margin="0,0,12,0" 
                                       HeightRequest="50"
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                    </VerticalStackLayout>

                    <!-- State (as Picker) -->
                    <VerticalStackLayout Spacing="6">
                        <Label Text="État" 
                               FontSize="14" 
                               TextColor="#6b7280" 
                               FontAttributes="Bold"/>
                        <Frame Padding="0" 
                               CornerRadius="8" 
                               BorderColor="#e5e7eb"
                               HasShadow="False">
                            <Picker SelectedItem="{Binding State}" 
                                    Title="Sélectionnez l'état" 
                                    FontSize="16" 
                                    TextColor="#374151"
                                    Margin="12,0" 
                                    HeightRequest="50">
                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Actif</x:String>
                                        <x:String>Annulé</x:String>
                                        <x:String>Terminé</x:String>
                                        <x:String>Reporté</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>
                            </Picker>
                        </Frame>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Buttons -->
            <Grid Grid.Row="2" 
                  ColumnDefinitions="*,*" 
                  ColumnSpacing="16"
                  Margin="0,24,0,10">

                <Button Grid.Column="0"
                        Text="Enregistrer" 
                        Command="{Binding ConfirmCommand}" 
                        BackgroundColor="#4361ee" 
                        TextColor="White" 
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50">
                    <Button.Shadow>
                        <Shadow Brush="#404361ee"
                                Offset="0,4"
                                Radius="8" />
                    </Button.Shadow>
                </Button>

                <Button Grid.Column="1"
                        Text="Supprimer" 
                        Command="{Binding DeleteCommand}" 
                        BackgroundColor="White" 
                        TextColor="#ef4444" 
                        BorderColor="#ef4444"
                        BorderWidth="1"
                        FontSize="16"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HeightRequest="50"/>
            </Grid>
        </Grid>
    </ScrollView>
</ContentPage>