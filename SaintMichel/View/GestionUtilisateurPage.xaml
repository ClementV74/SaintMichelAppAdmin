<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaintMichel.View.GestionUtilisateurPage"
             Title="Gestion des Utilisateurs"
>

    <Grid Padding="12,8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Label Text="Liste des Utilisateurs" 
               Grid.Row="0"
               FontSize="24" 
               FontAttributes="Bold"
               TextColor="White"
               Margin="8,12,0,16"/>

        <!-- User List -->
        <CollectionView ItemsSource="{Binding ObsItems}" 
                        Grid.Row="1" 
                        IsVisible="{Binding EventVisibility}" 
                        SelectionMode="Single" 
                        SelectedItem="{Binding SelectedItem}"
                        SelectionChangedCommand="{Binding EventSelectedCommand}"
                        Margin="0,0,0,8">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="4,6"
                           Padding="0"
                           CornerRadius="12"
                           HasShadow="True"
                           BorderColor="Transparent">
                        <Grid Padding="16" ColumnDefinitions="Auto,*">
                            <!-- Avatar Circle -->
                            <Border Grid.Column="0"
                                    WidthRequest="56" 
                                    HeightRequest="56"
                                    StrokeShape="RoundRectangle 28,28,28,28"
                                    BackgroundColor="#4361ee"
                                    Margin="0,0,16,0"
                                    VerticalOptions="Start">
                                <Label Text="{Binding nom, Converter={StaticResource FirstLetterConverter}}" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center"
                                       TextColor="White"
                                       FontSize="22"
                                       FontAttributes="Bold"/>
                            </Border>

                            <!-- User Details -->
                            <VerticalStackLayout Grid.Column="1" Spacing="6">
                                <!-- Full Name -->
                                <Label Text="{Binding nom}" 
                                       FontSize="20" 
                                       FontAttributes="Bold" 
                                       TextColor="White" />

                                <!-- Email -->
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                                    <Label Grid.Column="0" Text="ðŸ“§" FontSize="14" VerticalOptions="Center"/>
                                    <Label Grid.Column="1" 
                                           Text="{Binding email}" 
                                           FontSize="16" 
                                           TextColor="White"
                                           VerticalOptions="Center"/>
                                </Grid>

                                <!-- Role -->
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                                    <Label Grid.Column="0" Text="ðŸ‘¤" FontSize="14" VerticalOptions="Center"/>
                                    <Label Grid.Column="1" 
                                           Text="{Binding role}" 
                                           FontSize="14" 
                                           FontAttributes="Italic" 
                                           TextColor="#666666"
                                           VerticalOptions="Center"/>
                                </Grid>

                                <!-- Pseudo -->
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                                    <Label Grid.Column="0" Text="ðŸ”–" FontSize="14" VerticalOptions="Center"/>
                                    <Label Grid.Column="1" 
                                           Text="{Binding pseudo}" 
                                           FontSize="14" 
                                           TextColor="#4361ee"
                                           VerticalOptions="Center"/>
                                </Grid>

                                <!-- Phone -->
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                                    <Label Grid.Column="0" Text="ðŸ“±" FontSize="14" VerticalOptions="Center"/>
                                    <Label Grid.Column="1" 
                                           Text="{Binding telephone}" 
                                           FontSize="14" 
                                           TextColor="White"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>